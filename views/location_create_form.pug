extends layout

block content
  h1=title

  form(method='POST' action='/locations/create' class="ceForm")
    div.form-group
      label(for='country') Country:
      input#country.form-control(type='text' placeholder='Country' name='country' required='true' value=(undefined===location ? '' : location.country) )
      label(for='city') City:
      input#city.form-control(type='text' placeholder='City' name='city' required='true' value=(undefined===location ? '' : location.city))
      label(for='street') Street:
      input#street.form-control(type='text' placeholder='Street' name='street' required='true' value=(undefined===location ? '' : location.street))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg