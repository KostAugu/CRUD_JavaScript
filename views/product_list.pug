extends layout

block content
  h1= title

  - var n = 1;

  table(class='table table-striped table-hover text-center' style='width:100%', border='1')
    thead(class="thead-dark")
      tr
        th Number
        th Title
        th Description
        th price
        th Details / Edit / Delete
    tbody        
    each product in product_list
      tr
        td= n++
        td #{product.title}
        td #{product.description}
        td #{product.price}
        td(class="d-flex justify-content-center border-0") 
          a(class="flex-shrink-1" href=product.url)
            button(type='button' class='btn btn-info btn-lg') Details
          form(class="flex-shrink-1" method="get" action=product.url+'/edit')  
            button(type='submit' class='btn btn-warning btn-lg') #[i(class="fas fa-edit")]
          form(class="deleteRequest flex-shrink-1" method="post" action=product.url+'/delete')    
            button(type='submit' class='btn btn-danger btn-lg') #[i(class="fas fa-trash-alt")]
    else
      tr
        td(colspan="5") There are no products.
  include includes/modal.pug            