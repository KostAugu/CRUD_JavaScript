extends layout

block content
  h1 #{title}: #{product.title}
      
  - var n = 1;
  
  div(style='margin-left:20px;margin-top:20px')

    p Delete the following instances of this product from inventory before attempting to delete this product.

    table(class='table table-striped table-hover text-center detailTable')
      thead(class="thead-dark")
        tr
          th Number
          th Instance Id
          th Stock
          th Details
      tbody        
      each product in inventory_products
        tr
          td= n++
          td #{product.id}
          td #{product.stock}
          td(class="d-flex justify-content-center border-0") 
            a(href=product.url)
              button(type='button' class='btn btn-info btn-lg') Details    