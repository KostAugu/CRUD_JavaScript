extends layout

block content
  h1=title

  form(method='POST' action=(url ? url : location.url)+ '/update' enctype="application/x-www-form-urlencoded" class="ceForm")
    div.form-group
      input(type="hidden" name="_method" value="put")    
      label(for='country') Country:
      input#country.form-control(type='text' placeholder='Country' name='country' required='true' value=(location.country ? location.country : '') )
      label(for='city') City:
      input#city.form-control(type='text' placeholder='City' name='city' required='true' value=(location.city ? location.city : ''))
      label(for='street') Street:
      input#street.form-control(type='text' placeholder='Street' name='street' required='true' value=(location.street ? location.street : '')) 
      button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg



  